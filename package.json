{
  "name": "make-matrix",
  "version": "4.0.0",
  "license": "MIT",
  "description": "A simple, type-safe way to create multi-dimensional arrays",
  "author": "Neef Rehman",
  "keywords": [
    "matrix",
    "nth dimension",
    "array",
    "multidimensional",
    "math",
    "typescript"
  ],
  "homepage": "https://github.com/neefrehman/make-matrix",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neefrehman/make-matrix.git"
  },
  "bugs": {
    "url": "https://github.com/neefrehman/make-matrix/issues"
  },
  "files": [
    "src/**/*",
    "dist/**/*"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "format": "prettier \"src/**/*.{js,ts,tsx}\"",
    "format:fix": "prettier \"src/**/*.{js,ts,tsx}\" --write",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "typecheck": "tsc",
    "test": "jest --config jest.config.js",
    "build": "tsup --config='scripts/build.ts'",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "npm run benchmark:ci && npm run updateBadges && git push && git push --tags",
    "updateBadges": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/update-badges.ts",
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e",
    "commmitizen": "cz",
    "benchmark": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/run-benchmark.ts current",
    "benchmark:ci": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/run-benchmark.ts current ci",
    "benchmark:diff": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/run-benchmark.ts diff",
    "benchmark:diff:ci": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/run-benchmark.ts diff ci"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "benny": "^3.7.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "semantic-release": "^22.0.8",
    "simple-git-hooks": "^2.9.0",
    "terser": "^5.24.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*": [],
    "*.(js|ts|tsx)": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests --config jest.config.js"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npm run commit-msg",
    "pre-commit": "npm run pre-commit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        100
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
