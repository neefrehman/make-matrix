{
    "name": "make-matrix",
    "version": "1.0.0",
    "description": "A simple, type-safe way to create multi-dimensional arrays",
    "homepage": "https://github.com/neefrehman/make-matrix#readme",
    "bugs": {
        "url": "https://github.com/neefrehman/make-matrix/issues"
    },
    "author": "Neef Rehman",
    "license": "ISC",
    "files": [
        "lib/**/*"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neefrehman/make-matrix.git"
    },
    "keywords": [
        "matrix",
        "nth dimenson",
        "array",
        "multidimensional",
        "generative coding",
        "creative coding"
    ],
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@types/jest": "^27.0.1",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.1.0",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2",
        "semantic-release": "^17.4.7",
        "simple-git-hooks": "^2.6.1",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.2"
    },
    "scripts": {
        "format": "prettier \"src/**/*.{js,ts,tsx}\"",
        "format:fix": "prettier \"src/**/*.{js,ts,tsx}\" --write",
        "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
        "test": "jest --config jestconfig.json",
        "test:coverage": "jest --coverage --config jestconfig.json",
        "updateSnapShots": "jest --updateSnapshot",
        "build": "tsc",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags",
        "pre-commit": "lint-staged",
        "commit-msg": "commitlint -e",
        "commmitizen": "git-cz"
    },
    "lint-staged": {
        "*": [],
        "*.(js|ts|tsx)": [
            "eslint --fix",
            "prettier --write",
            "jest --findRelatedTests --config jestconfig.json"
        ]
    },
    "simple-git-hooks": {
        "commit-msg": "npm run commit-msg",
        "pre-commit": "npm run pre-commit",
        "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "lib/index.js",
                            "label": "make-matrix.js"
                        }
                    ]
                }
            ]
        ]
    }
}
