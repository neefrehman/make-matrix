{
    "name": "make-matrix",
    "version": "1.0.0",
    "description": "A simple, type-safe way to create multi-dimensional arrays",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "format": "prettier \"src/**/*.{js,ts,tsx}\"",
        "format:fix": "prettier \"src/**/*.{js,ts,tsx}\" --write",
        "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
        "test": "jest --config jestconfig.json",
        "build": "tsc",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neefrehman/make-matrix.git"
    },
    "keywords": [
        "matrix",
        "nth dimenson",
        "array",
        "multidimensional",
        "generative coding",
        "creative coding"
    ],
    "files": [
        "lib/**/*"
    ],
    "author": "Neef Rehman",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/neefrehman/make-matrix/issues"
    },
    "homepage": "https://github.com/neefrehman/make-matrix#readme",
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "@typescript-eslint/eslint-plugin": "^2.31.0",
        "@typescript-eslint/parser": "^2.31.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "lint-staged": "^10.2.2",
        "prettier": "^2.0.5",
        "semantic-release": "^17.0.7",
        "ts-jest": "^25.5.0",
        "typescript": "^3.8.3"
    },
    "lint-staged": {
        "*.(js|ts|tsx)": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {}
}
